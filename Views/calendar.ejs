        <div class="content-container">
            <div class="containerCalendar">
                <div id="calendarDisplay">
                    <div id = "monthYear"> </div>
                    <div>
                        <button id="newEvent">
                            <img src = "/plus_symbol.png">
                        </button>
                        <button id="backButton">
                            <img src = "/left-arrow.png">
                        </button>
                        <button id = "nextButton">
                            <img src = "/right-arrow.png">
                        </button>
                    </div>
                </div>
                </div>
                <div id="weekdays">
                    <div>Sun</div>
                    <div>Mon</div>
                    <div>Tue</div>
                    <div>Wed</div>
                    <div>Thur</div>
                    <div>Fri</div>
                    <div>Sat</div>
                </div>  
                <div id="calendar">
                </div>
            </div>

            <div id ="createCalendarMilestone">
                <form action="/saveEvent" method="POST">
                    <h2>New Milestone</h2>
                    
                    <input class="milestoneForm" type="text" id="milestoneTitle" name="milestoneTitle" placeholder="Title">
                    <input class="milestoneForm" type="date" id="milestoneDate" name="milestoneDate">
                    <input class="milestoneForm" type="time" id="milestoneStart" name="milestoneStart">
                    <input class="milestoneForm" type="time" id="milestoneEnd" name="milestoneEnd">
                    <button class="saveButton" type="submit">Save</button>
                </form>
                <button id="cancelButton">Cancel</button>    
            </div>  
            <!-- Delete event modal -->
            <div id="deleteMilestone">
                <form action="/removeEvent" method="POST">
                    <p id="removeEventTitle"></p>
                    <p id="eventID"></p>
                    <p id="Message">Please enter the number above and click delete if you'd like to delete the event</p>
                    <input class="milestoneDeleteForm" type="text" id="removeID" name="removeID">
                    <button id="deleteMilestoneButton" type = "submit">Delete</button>
                    <button id="closeMilestoneButton" type = "cancel">Close</button>
            </form>
            </div>
            
        </div>
    <script src="./calendar.js"></script>
